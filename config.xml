<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jakinventions.VocalRec" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VocalRec</name>
    <description>
        An app for allowing the deaf to read speech recognition text fast.
    </description>
    <author email="support@jakinventions.com" href="https://jakinventions.com/">
        Jak Inventions
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-speechrecognition" spec="^1.2.0" />
</widget>
